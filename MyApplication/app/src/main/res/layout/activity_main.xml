<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
        <TextView
            android:id="@+id/tveProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:textColor="#E41616"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingresa Texto"
            android:inputType="textPersonName"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCaptureCode"
            android:layout_width="168dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:hapticFeedbackEnabled="false"
            android:text="Scanear" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="168dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="BUSCAR"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textColor="#DF1515"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtProducto"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:ems="10"
            android:hint="Ingresa Texto"
            android:inputType="textMultiLine"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dueño"
            android:textColor="#E61818"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtDueño"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false"
            android:ems="10"
            android:hint="Ingresa Texto"
            android:inputType="textPersonName"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="AGREGAR"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="EDITAR" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="ELIMINAR" />

        <Button
            android:id="@+id/btnMostrar"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="MOSTRAR" />

    </LinearLayout>

</RelativeLayout>